{
    "name": "mediumart/momo",
    "description": "MTN Mobile money implementation",
    "type": "library",
    "keywords": [
        "MTN",
        "Mobile money",
        "Payment Service",
        "Mediumart"
    ],
    "license": "MIT",
    "authors": [
        {
            "name": "Isaac Esso",
            "email": "daprod2009@gmail.com"
        }
    ],
    "require": {
        "php": ">=8.0",
        "guzzlehttp/guzzle": "^7.4",
        "ramsey/uuid": "^4.2"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.5",
        "phpstan/phpstan": "^1.10",
        "orchestra/testbench": "v7.24.1"
    },
    "autoload": {
        "psr-4": {
            "Mediumart\\MobileMoney\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Mediumart\\MobileMoney\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "post-autoload-dump": [
            "@php vendor/bin/testbench package:discover --ansi"
        ]
    },
    "extra": {
        "laravel": {
            "providers": [
                "Mediumart\\MobileMoney\\Laravel\\ServiceProvider"
            ]
        }
    }
}
